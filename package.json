{
  "name": "docker.nuxt",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "admin": "yarn --cwd packages/admin dev",
    "admin:install": "yarn --cwd packages/admin install",
    "admin:build": "yarn --cwd packages/admin build",
    "admin:start": "yarn --cwd packages/admin start",
    "compose": "docker-compose up -d"
  }
}